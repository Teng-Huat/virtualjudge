<%= form_for @changeset, reset_password_path(@conn, :reset, @user), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <%= input f, :password %>
  <%= input f, :password_confirmation %>
  <%= submit "Reset!", class: "btn btn-primary" %>
<% end %>
